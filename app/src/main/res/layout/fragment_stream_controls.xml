<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		>
	
	<SurfaceView
			android:layout_height="200dp"
			android:layout_width="match_parent"
			android:id="@+id/surfaceViewCamera"
			
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			
			android:layout_gravity="center|center_horizontal|top"
			/>
	
	<ImageButton
			android:id="@+id/buttonLeft"
			
			android:alpha="0.5"
			android:layout_width="100dp"
			android:layout_height="100dp"
			
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="@string/contentDescriptionButtonLeftFragmentStreamControls"
			android:layout_below="@+id/surfaceViewCamera"
			android:src="@drawable/button_move_left"
			android:layout_alignParentStart="true"
			android:layout_marginStart="77dp"
			android:layout_marginTop="315dp"
			/>
	
	<ImageButton
			android:id="@+id/buttonUp"
			tools:ignore="RtlHardcoded"
			
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginBottom="0dp"
			android:layout_toRightOf="@id/buttonLeft"
			
			android:contentDescription="@string/contentDescriptionButtonUpFragmentStreamControls"
			android:src="@drawable/button_move_up"
			
			android:alpha="0.5"
			android:layout_marginTop="-157dp"
			android:layout_below="@+id/buttonLeft"
			android:layout_toEndOf="@+id/buttonLeft"
			android:backgroundTint="@android:color/transparent"
			android:layout_marginStart="-40dp"
			android:layout_marginLeft="-40dp"
			/>
	
	<ImageButton
			android:id="@+id/buttonDown"
			
			tools:ignore="RtlHardcoded"
			
			android:alpha="0.5"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_toRightOf="@id/buttonLeft"
			android:backgroundTint="@android:color/transparent"
			
			android:contentDescription="@string/contentDescriptionButtonDownFragmentStreamControls"
			android:src="@drawable/button_move_down"
			android:layout_below="@+id/buttonLeft"
			android:layout_marginLeft="-40dp"
			android:layout_marginTop="-40dp"
			/>
	
	<ImageButton
			android:id="@+id/buttonRight"
			
			tools:ignore="RtlHardcoded"
			
			android:alpha="0.5"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_toRightOf="@id/buttonDown"
			android:backgroundTint="@android:color/transparent"
			
			android:contentDescription="@string/contentDescriptionButtonRightFragmentStreamControls"
			android:layout_alignTop="@+id/buttonLeft"
			android:src="@drawable/button_move_right"
			android:layout_toEndOf="@+id/buttonLeft"
			android:layout_marginStart="20dp"
			android:layout_marginLeft="40dp"
			/>

</RelativeLayout>
