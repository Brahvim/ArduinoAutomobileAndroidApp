<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		>
	
	<SurfaceView
			android:layout_height="200dp"
			android:layout_width="match_parent"
			android:id="@+id/surfaceViewCamera"
			
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			
			android:layout_gravity="center|center_horizontal|top"
			/>
	
	<ImageButton
			android:id="@+id/buttonLeft"
			
			android:alpha="0.5"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_below="@id/buttonUp"
			
			android:src="@drawable/button_move_left"
			android:contentDescription="@string/contentDescriptionButtonLeftFragmentStreamControls"
			/>
	
	<ImageButton
			android:id="@+id/buttonUp"
			tools:ignore="RtlHardcoded"
			
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_marginTop="55dp"
			android:layout_toRightOf="@id/buttonLeft"
			android:layout_below="@+id/surfaceViewCamera"
			
			android:alpha="0.5"
			android:src="@drawable/button_move_up"
			android:contentDescription="@string/contentDescriptionButtonUpFragmentStreamControls"
			/>
	
	<ImageButton
			android:id="@+id/buttonDown"
			
			tools:ignore="RtlHardcoded"
			
			android:alpha="0.5"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_below="@id/buttonLeft"
			android:layout_toRightOf="@id/buttonLeft"
			
			android:src="@drawable/button_move_down"
			android:contentDescription="@string/contentDescriptionButtonDownFragmentStreamControls"
			/>
	
	<ImageButton
			android:id="@+id/buttonRight"
			
			tools:ignore="RtlHardcoded"
			
			android:alpha="0.5"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_below="@id/buttonUp"
			android:layout_toRightOf="@id/buttonDown"
			
			android:src="@drawable/button_move_right"
			android:contentDescription="@string/contentDescriptionButtonRightFragmentStreamControls"
			/>

</RelativeLayout>
